<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="author" content="@Html.RenderApplicationMetaAuthor()">
    <meta name="keywords" content="@Html.RenderApplicationMetaKeywords()">
    <meta name="description" content="@Html.RenderApplicationMetaDescription()">
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@Html.RenderApplicationTitle() | @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <!--Theme-->
    @Html.Partial("_ThemePartial")
    <!--Kendo UI-->
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2015.1.429/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2015.1.429/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/kendo/2015.1.429/kendo.web.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/App/app-jq.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")" type="text/javascript"></script>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- header logo: style can be found in header.less -->
        <header class="header">
            @Html.RenderApplicationHeader()
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-right">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        @Html.Partial("_AppMessagePartial")
                        <!-- Notifications: style can be found in dropdown.less -->
                        @Html.Partial("_AppNotificationPartial")
                        <!-- Tasks: style can be found in dropdown.less -->
                        @Html.Partial("_AppTaskPartial")
                        <!-- User Account: style can be found in dropdown.less -->
                        @Html.Partial("_UserNavbarPartial")
                    </ul>
                </div>
            </nav>
        </header>
        <!-- header logo: style can be found in header.less -->
    </div>
        

        <div class="wrapper row-offcanvas row-offcanvas-left">
            <!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    @Html.Partial("_UserSidebarPartial")
                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    @Html.Partial("_MenuSidebarPartial")
                </section>
                <!-- /.sidebar -->
            </aside>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">
                <!-- Content Header (Page header) -->
                @*@Html.Partial("_BreadcrumbPartial")*@


                <!-- Main content -->
                <section class="content">

                    @RenderBody()

                </section><!-- /.content -->
            </aside>
            <!-- /.right-side -->
        </div>
        <div id="windowZone">
            <div id="appCommonWindow">
            </div>
            <div id="appDeleteWindow">
                <div id="deletePage" class="deletePage form-win col-xs-12">
                    <div class="row">
                        <input type="hidden" name="hdDeleteId" id="hdDeleteId" value="" />
                        <input type="hidden" name="hdDeletePostUrl" id="hdDeletePostUrl" value="" />
                    </div>
                    <div class="row">
                        <div class="callout callout-warning">
                            <h4>
                                Warning!
                            </h4>
                            <p>
                                Do you want to delete this?
                            </p>
                        </div>
                    </div>
                    <div class="row form-hr">
                        <div id="buttonZone" class="pull-right buttonZone">
                            <button type="button" class="btn btn-success btn-sm btn-flat" id="btnYesDelete" name="btnYesDelete"
                                    onclick="YesDelete()">
                                <i class="fa fa-save"></i>&nbsp;&nbsp;Yes
                            </button>
                            <button type="button" class="btn btn-warning btn-sm btn-flat" id="btnNoDelete" name="btnNoDelete"
                                    onclick="NoDelete()">
                                <i class="fa fa-times"></i>&nbsp;&nbsp;No
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="appMessageWindow">
            </div>
            <div id="appProgressWindow">
                <div class="progess-bar">
                    <img src="../../Theme/img/loading.gif" alt="" />
                </div>
            </div>
        </div>
</body>
</html>
