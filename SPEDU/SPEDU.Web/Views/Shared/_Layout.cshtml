<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="author" content="@Html.RenderApplicationMetaAuthor()">
    <meta name="keywords" content="@Html.RenderApplicationMetaKeywords()">
    <meta name="description" content="@Html.RenderApplicationMetaDescription()">
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@Html.RenderApplicationTitle() | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/app")
    <!--Theme-->
    @Html.Partial("_ThemePartial")
    <!--Kendo UI-->
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2015.1.429/kendo.common.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2015.1.429/kendo.default.min.css")" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/kendo/2015.1.429/kendo.web.min.js")"></script>
    <!--toastr-->
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js" type="text/javascript"></script>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- header -->
        <header class="main-header">
            @Html.RenderApplicationHeader()
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        @Html.Partial("_AppMessagePartial")
                        <!-- Notifications: style can be found in dropdown.less -->
                        @Html.Partial("_AppNotificationPartial")
                        <!-- Tasks: style can be found in dropdown.less -->
                        @Html.Partial("_AppTaskPartial")
                        <!-- User Account: style can be found in dropdown.less -->
                        @Html.Partial("_UserNavbarPartial")
                    </ul>
                </div>
            </nav>
        </header>
        <!-- /.header -->
        
        <!-- main-sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                @Html.Partial("_UserSidebarPartial")
                <!-- sidebar menu: : style can be found in sidebar.less -->
                @Html.Partial("_MenuSidebarPartial")
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- /.main-sidebar -->
        
        <!-- content-wrapper -->
        <div class="content-wrapper">
            @Html.Partial("_BreadcrumbPartial")
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        
        <!-- footer -->
        <footer class="main-footer">
            @Html.RenderFooter()
        </footer>
        <!-- /.footer -->

    </div>
    <!-- ./wrapper -->

    <div id="windowZone">
        <div id="appCommonWindow">
        </div>
        <div id="appDeleteWindow">
            <div id="deletePage" class="deletePage form-win col-xs-12">
                <div class="row">
                    <input type="hidden" name="hdDeleteId" id="hdDeleteId" value="" />
                    <input type="hidden" name="hdDeletePostUrl" id="hdDeletePostUrl" value="" />
                </div>
                <div class="row">
                    <div class="callout callout-warning">
                        <h4>
                            Warning!
                        </h4>
                        <p>
                            Do you want to delete this?
                        </p>
                    </div>
                </div>
                <div class="row form-hr">
                    <div id="buttonZone" class="pull-right buttonZone">
                        <button type="button" class="btn btn-success btn-sm btn-flat" id="btnYesDelete" name="btnYesDelete"
                                onclick="YesDelete()">
                            <i class="fa fa-save"></i>&nbsp;&nbsp;Yes
                        </button>
                        <button type="button" class="btn btn-warning btn-sm btn-flat" id="btnNoDelete" name="btnNoDelete"
                                onclick="NoDelete()">
                            <i class="fa fa-times"></i>&nbsp;&nbsp;No
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="appMessageWindow">
        </div>
        <div id="appProgressWindow">
            <div class="progess-bar">
                <img src="../../Theme/img/loading.gif" alt="" />
            </div>
        </div>
    </div>

    <div id="bootstrapModal">
        <div class="modal fade" id="appModal" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog " id="appModalDialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title" id="appModalDialogTitle"></h4>
                    </div>
                    <div class="modal-body" id="appModalDialogContainer">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="appModalLoading" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog " id="appModalDialog" style="width: 32px !important; padding-top: 50% !important; padding-bottom: 50% !important; padding-left: 0px !important; padding-right: 0px !important;">
                <div class="modal-content" style="border:none !important; border-radius: 0px !important;">
                    <div class="loading">
                        <img src="~/Theme/img/ajax-loader.gif" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        //$.widget.bridge('uibutton', $.ui.button);
        $(function () {
            App.init();
        });
    </script>

</body>
</html>
