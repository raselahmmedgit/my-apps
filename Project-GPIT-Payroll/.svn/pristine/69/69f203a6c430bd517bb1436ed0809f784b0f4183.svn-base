<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>Business clean web templates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @Scripts.Render("~/bundles/payrolljs")
    
    <script type="text/javascript" src="~/Scripts/bootstrap-datepicker.js"></script>
	<link id="callCss" rel="stylesheet" href="~/themes/current/bootstrap.min.css" type="text/css" media="screen"/>
	<link href="~/themes/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css">
	<link href="~/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/themes/css/base.css" rel="stylesheet" type="text/css">
    <link href="~/Content/datepicker.css" rel="stylesheet" type="text/css">
    <link href="~/Content/jquery.fileupload-ui.css" rel="stylesheet" type="text/css">
    <style type="text/css" id="enject"></style>
    @RenderSection("PageSpecificJsHeader", false)
</head>
    <body>
        <!--Header Starts================================================ -->
         <section id="headerSection">
            <div class="container">
                <div class="navbar"  style="height: 59px;">
                    <div class="container" >
                        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <h1 style=""><a href="@Url.Action("Index","Home")" class="brand"> GPIT <small>  Ltd.</small></a></h1>
                        <div id="mMenu" class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li class=""> @Html.ActionLink("Setup", "Index", "Setup")</li>
                                <li class=""> @Html.ActionLink("Employee", "Index", "Employee")</li>
                                <li class=""> @Html.ActionLink("Allowance", "AllowanceMain", "Allowance")</li>
                                <li class=""> @Html.ActionLink("Deduction", "DeductionMain", "Deduction")</li>
                                <li class=""> @Html.ActionLink("Salary", "Index", "Salary")</li>
                                <li class=""> @Html.ActionLink("Bonus", "BonusMain", "Bonus")</li>
                                <li class=""> @Html.ActionLink("IncomeTax", "Index", "IncomeTax")</li>
                                <li class=""> @Html.ActionLink("Settlement", "Index", "Settlement")</li>
                                <li class=""> @Html.ActionLink("Report", "PaySlip", "Report")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--Header Ends==================================CreateDepartment.cshtml============== -->
        
        <!-- Page banner start-->
        <section id="bannerSection" style="background:url(../themes/images/banner/details.png) no-repeat center center #000;">
	        <div class="container" >	
		        <h1 id="pageTitle">@RenderSection("PageBanner", false) 
		        <span class="pull-right toolTipgroup">
                    @if (Request.IsAuthenticated)
                    {
			            <a href="~/Authentication/Index" data-placement="top" data-original-title="Payroll User"><img style="width:45px" src="~/themes/images/prluser.png" alt="Payroll User" title="Payroll User"></a>
			            <a href="~/Authentication/ChangePassword" data-placement="top" data-original-title="Change password"><img style="width:45px" src="~/themes/images/prlchange_password.png" alt="Change Password" title="Change Password"></a>
			            <a href="~/Authentication/LogOff" data-placement="top" data-original-title="Log out"><img style="width:45px" src="~/themes/images/prllogout.png" alt="Log Out" title="Log Out"></a>
                    }
		        </span>
		        </h1>
	        </div>
        </section> 
       <!-- Page banner end -->
        @*<div>sdsdfdfsdfdfsdfsdfsdfsdfssdf</div>*@
        <!--Body Starts================================================ -->
        <section id="bodySection" style="left: 0px; padding-top:4px;">
            
            <div class="container">			
                <div class="row" style="padding:0; margin:0;text-align:right;">
                    @if (Request.IsAuthenticated)
                    {
                        <label style="display: inline-block;">@User.Identity.Name </label>
                        <label style="display: inline-block;padding-left:7px">@Membership.GetUser(@User.Identity.Name).LastLoginDate.ToString("MMM d, yyy  h:mm tt")</label>
                    }
                </div>		
           
            <!-- Sidebar comumn -->
            				
                <div class="row-fluid">						
	                 @RenderBody()
                </div>

            </div>
        </section>
        <!--Body Starts================================================ -->
        
        <script type="text/javascript" src="~/Scripts/widgets.js"></script>
	    <script src="~/themes/js/bootstrap-tooltip.js"></script>
        <script src="~/themes/js/bootstrap-popover.js"></script>
        <script src="~/themes/js/business_ltd_1.0.js"></script>
       @RenderSection("PageSpecificJs", false)
       

    </body>
</html>
