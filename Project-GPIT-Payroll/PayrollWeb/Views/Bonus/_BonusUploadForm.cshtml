@model PayrollWeb.ViewModels.BonusUploadView

@using (Html.BeginForm("UploadBonus", "Bonus", FormMethod.Post, new { @class = "form-inline", @id = "fileupload", @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Bonus Upload View</legend>
    
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.Year)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.Year, new SelectList(@Model.GetYears()), "---Select Year---") @Html.ValidationMessageFor(model => model.Year)
             <br />
            </div>
        </div>
    
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.MonthYear)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.MonthYear, new SelectList(@Model.GetMonths(),"Value","Key"), "---Select Month---") @Html.ValidationMessageFor(model => model.MonthYear)<br />
            </div>
        </div>

        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.BonusName)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.BonusName, new SelectList(@Model.BonusNames, "id", "name"), "Select Bonus Name")
                 @Html.ValidationMessageFor(model => model.BonusName)
                <br />
            </div>
                
        </div>
        
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
            </div>
            <div class="span8">
               
                <span class="btn btn-success fileinput-button">
                    <i class="icon-plus" ></i>
                    <span>Select file</span>
                    <input type="file" id="fileupload" name="fileupload" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" multiple="multiple">
                </span>
                <button id="btnUploadAll" class="btn btn-primary" type="button">Upload File</button>
                <div class="clearfix"><br/></div>
                
                <div class="span8" style="margin: 0;">
                    <div class="hide" id="filelistholder"></div>
                </div>
            </div>
        </div>
       
    </fieldset>
}


