@model PayrollWeb.ViewModels.LogOnModel
  <style type="text/css">

        .main-block{
			width:600px;
			margin:0px auto;
		}
		.block-body{
			padding:20px 10px;
		}

		.login-form{

			float:left;
			width:300px;	
		}

		label{
			float:left;
			width:80px;
			margin:5px 
			0px;
		}
		.login-text{
					float:left;
			width:200px;
		}
		.remember-me{width:235px;}
          .remember-me a
          {color:#333333;
          }
		input[type="checkbox"]{
			margin-top:0px;
		} 
		.well-login{
		  min-height: 20px;
		  padding: 19px;
		  margin-bottom: 20px;
		  border: 1px solid #e3e3e3;
		  border-radius: 10px;
          background: #ffffff; /* Old browsers */

		}

    </style>
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div style="text-align:center">@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")</div>
@using (Html.BeginForm()) {
    <br />
    <br />
    <br />
    <div class="main-block well-login">
			<div class="block-body">
			
					<form>
                        <div  class="login-form">
						<label>Username</label>
						<div class="editor-field">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
						<label>Password</label>
						<div class="editor-field">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
						<label class="remember-me">@Html.CheckBoxFor(m => m.RememberMe) Remember me </label>
						<input type="submit" class="btn btn-success" value="Login" >
						<label class="remember-me"><a href="#">Forgot your password?</a></label>
                        </div>
						
					</form>
					
					<div style="margin:0px 0 0 20px;float:left;width:24px;height:164px;"> <img src="Images/v_grad.png" ></div>
					<div style="margin:25px 0 0 10px;float:left;width:200px;"> <img src="Images/login_logo.png" ></div>
					<div class="clearfix"></div>
			</div>
		</div>

}
