@model PayrollWeb.ViewModels.AllowanceUploadView

@using (Html.BeginForm("GgetAllowanceDataSelection", "Allowance", FormMethod.Post, new { @class = "form-inline" })) 
{
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Choose Search Criteria</legend>
    
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.Year)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.Year, new SelectList(@Model.GetYears()), "---Select Year---") @Html.ValidationMessageFor(model => model.Year)
             <br />
            </div>
        </div>
    
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.Month)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.Month, new SelectList(@Model.GetMonths(),"Value","Key"), "---Select Month---") @Html.ValidationMessageFor(model => model.Month)<br />
            </div>
        </div>

        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                @Html.LabelFor(model => model.AllowanceName)
            </div>
            <div class="span8" style="float: left;">
                @Html.DropDownListFor(model => model.AllowanceName, new SelectList(@Model.AllowanceNames, "id", "allowance_name"), "Select Allowance Name")
                @Html.ValidationMessageFor(model => model.AllowanceName)
                <br />
            </div>
                
        </div>
        
        <div class="row-fluid" style="margin: 12px;">
            <div class="span2">
                
            </div>
            <div class="span8" style="float: left;">
                <input class="btn btn-success" id="btnSearch" type="submit" value="Search"/>
                <br />
            </div>
                
        </div>
       
    </fieldset>
}

