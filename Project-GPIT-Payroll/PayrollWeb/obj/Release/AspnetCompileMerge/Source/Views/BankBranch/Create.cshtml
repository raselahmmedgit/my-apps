@model PayrollWeb.ViewModels.BankBranch

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDetailsPage.cshtml";
}

@section PageBanner
{
Create Bank Branch
}

@using (Html.BeginForm("Create", "BankBranch", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row-fluid">
        <div class="span2">
            @Html.LabelFor(model => model.bank_id)
        </div>
        <div class="span3">
            @Html.DropDownList("SelectedValue", new SelectList(ViewBag.AllBank, "Text", "Value"))
        </div>
        <div class="span4 offset1">
            @Html.ValidationMessageFor(model => model.bank_id)
        </div>
    </div>

    <div class="row-fluid">
        <div class="span2">
            @Html.LabelFor(model => model.branch_name)
        </div>
        <div class="span3">
            @Html.EditorFor(model => model.branch_name)
        </div>
        <div class="span4 offset1">
            @Html.ValidationMessageFor(model => model.branch_name)
        </div>
    </div>

    <div class="row-fluid">
        <div class="span2">
            @Html.LabelFor(model => model.branch_code)
        </div>
        <div class="span3">
            @Html.EditorFor(model => model.branch_code)
        </div>
        <div class="span3 offset1">
            @Html.ValidationMessageFor(model => model.branch_code)
        </div>
    </div>
    <br />
    <div class="row-fluid">
        <div class="span2">
            
        </div>
        <div class="span3">
            <table>
                <tr>
                    <td>
                        <input class="btn btn-success" type="submit" value="Create" />
                    </td>
                    <td style="width:20px"></td>
                    <td>
                        @Html.ActionLink("Back to List", "Index")
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

